---
import WaveIcon from '../assets/wave-icon.svg?raw';
---

<header class="relative">
	<div class="px-4 sm:px-6 lg:px-8">
		<div class="flex justify-between items-center py-4">
			<!-- Left side: Logo and desktop navigation -->
			<div class="flex items-center space-x-6">
				<a href="/" class="flex items-center space-x-2">
					<div class="w-6 h-8 sm:w-8 sm:h-12 text-blue-400 flex items-center justify-center" set:html={WaveIcon}></div>
					<h1 class="text-xl sm:text-2xl font-bold text-white">WaveWatch</h1>
				</a>
				<!-- Desktop navigation -->
				<div class="hidden md:flex items-center space-x-6">
					<a 
						href="#"
						class="text-gray-300 hover:text-white transition-colors duration-200"
					>
						Features
					</a>
					<a 
						href="#"
						class="text-gray-300 hover:text-white transition-colors duration-200"
					>
						Docs
					</a>
					<a 
						href="/demo"
						class="text-gray-300 hover:text-white transition-colors duration-200"
					>
						Demo
					</a>
				</div>
			</div>

			<!-- Right side: Desktop items and mobile menu button -->
			<div class="flex items-center space-x-4">
				<!-- Desktop right side items -->
				<div class="hidden md:flex items-center space-x-4">
					<a 
						href="https://github.com/zleytus/wavewatch" 
						target="_blank"
						class="text-gray-300 hover:text-white transition-colors duration-200"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
						</svg>
					</a>
					<div class="h-6 w-px bg-zinc-700"></div>
					<a 
						href="#"
						class="text-gray-300 hover:text-white transition-colors duration-200"
					>
						Sign In
					</a>
					<a 
						href="#"
						class="px-3 py-2 text-sm border border-zinc-600 hover:border-zinc-500 text-gray-300 hover:text-white rounded-md transition-colors duration-200"
					>
						Sign Up
					</a>
				</div>

				<!-- Mobile GitHub link and menu button -->
				<a 
					href="https://github.com/zleytus/wavewatch" 
					target="_blank"
					class="md:hidden text-gray-300 hover:text-white transition-colors duration-200"
				>
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
					</svg>
				</a>
				<button 
					id="mobile-menu-button"
					class="md:hidden text-gray-300 hover:text-white focus:outline-none focus:text-white transition-colors duration-200"
					aria-label="Toggle mobile menu"
				>
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
			</div>
		</div>

		<!-- Mobile menu (hidden by default) -->
		<div id="mobile-menu" class="md:hidden hidden absolute top-full left-0 right-0 z-50">
			<div class="mx-4 px-2 pt-2 pb-3 space-y-1 bg-zinc-900 rounded-lg mt-2 shadow-lg border border-zinc-800">
				<a 
					href="#"
					class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-zinc-800 rounded-md transition-colors duration-200"
				>
					Features
				</a>
				<a 
					href="#"
					class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-zinc-800 rounded-md transition-colors duration-200"
				>
					Docs
				</a>
				<a 
					href="/demo"
					class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-zinc-800 rounded-md transition-colors duration-200"
				>
					Demo
				</a>
				<div class="border-t border-zinc-700 my-2"></div>
				<a 
					href="#"
					class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-zinc-800 rounded-md transition-colors duration-200"
				>
					Sign In
				</a>
				<a 
					href="#"
					class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-zinc-800 rounded-md transition-colors duration-200"
				>
					Sign Up
				</a>
			</div>
		</div>
	</div>
</header>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const mobileMenuButton = document.getElementById('mobile-menu-button');
		const mobileMenu = document.getElementById('mobile-menu');
		
		if (mobileMenuButton && mobileMenu) {
			mobileMenuButton.addEventListener('click', function() {
				mobileMenu.classList.toggle('hidden');
			});

			// Close mobile menu when clicking outside
			document.addEventListener('click', function(event) {
				if (!mobileMenuButton.contains(event.target) && !mobileMenu.contains(event.target)) {
					mobileMenu.classList.add('hidden');
				}
			});
		}
	});
</script>